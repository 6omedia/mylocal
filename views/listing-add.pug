extends layout

block content

	header.full
		include ./partials/header

	.pictureHeader
		.container
			h1 Add Listing

	.bigWhite
		.container#page-addlisting
			.row
				.col-sm-7
					.form
						h2 General
						ul.list
							li
								label Business Name
								input(type="text")
							li
								label About  
								textarea
							li
								label Industry
								input(type="text")#q_industry
						h2 Services
						ul.list
							li
								label Add Service
								input(type="text").inline_btn#q_services
								.btn +
						ul#services
						h2 Address
						ul.list
							li
								label Line one
								input(type="text")
							li
								label Line two
									i - optional
								input(type="text")
							li
								label City/Town
								input(type="text")#q_town
							li
								label Postcode
								input(type="text")#q_postcode
						h2 Contact
						ul.list
							li
								label Phone
								input(type="text")
							li
								label Email
								input(type="text")
							li
								label Website
								input(type="text")
						h2 Opening Hours
						table
							tr
								th.thlabel
								th.open_col.pad Open
								th.close_col.pad Close
							tr
								th.thlabel Monday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
							tr
								th.thlabel Tuesday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
							tr
								th.thlabel Wednesday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
							tr
								th.thlabel Thursday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
							tr
								th.thlabel Friday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
							tr
								th.thlabel Saturday
								td.open_col
									input(type="time", value="00:00")
								td
									input(type="time", value="00:00")
							tr
								th.thlabel Sunday
								td.open_col
									input(type="time", value="00:00")
								td.close_col
									input(type="time", value="00:00")
						h2 Social
						ul.list
							li
								label Facebook
								input(type="type").fb
							li
								label Twitter
								input(type="type").tw
							li
								label Instagram
								input(type="type").ig
							li
								label Google Plus
								input(type="type").gp
							li
								label YouTube
								input(type="type").yt
							li
								label Linked In
								input(type="type").li
							li
								label Pinterest
								input(type="type").pi

						h2 Branding
						ul.list.branding_edit
							li
								label(for="logoupload").logo_upload
									input(type="file")#logoupload
									p Upload Logo
									img(src="/static/img/596.jpg")
							li
								label.bg_upload
									input(type="file")
