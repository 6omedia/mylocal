						a.nextmap-nav(href='#') Next
			.col-list-wrap.left-list
				#lisfw.listsearch-options.fl-wrap
					.container
						.listsearch-header.fl-wrap
							h3
								| Results For : 
								span #{industry} in #{town}
							.listing-view-layout
								ul
									li
										a.grid.active(href='#')
											i.fa.fa-th-large
									li
										a.list(href='#')
											i.fa.fa-list-ul
