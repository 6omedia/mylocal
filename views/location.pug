			section
				.container
					.section-title
						h2 Featured Categories
						.section-subtitle Catalog of Categories
						span.section-separator
						//- p Explore some of the best tips from around the city from our partners and friends.
					.gallery-items.fl-wrap.mr-bot.spad
						.gallery-item
							.grid-item-holder
								.listing-item-grid
									img(src=`${featured[0].bgimage}` alt="")
									.listing-item-cat
										h3
											a(href=`/find/${featured[0].name}/${town.name}`) #{featured[0].name}
						.gallery-item.gallery-item-second
							.grid-item-holder
								.listing-item-grid
									img(src=`${featured[2].bgimage}` alt="")
