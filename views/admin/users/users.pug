extends ../layout

block content
	
	header
		nav
			ul.list.nav
				li
					a(href="/logout") Logout

	section#user-page
		include ../partials/side

		.main
			h1 Users
			ul.bread-crumb
				li
					span Users
			.floatLeft
				ul.filter.list
					li
						label Name
						input(type="text")#user_name.filterInput
					li
						label Email
						input(type="text")#email.filterInput
					li
						label User Role
						select#user_role.filterInput
							option(value="") - 
							option(value="Subscriber") Subscriber
							option(value="Editor") Editor
							option(value="Admin") Admin
							option(value="Super Admin") Super Admin
					li
						button.btn#search Search
			.floatLeft
				table
					tr
						th Name
						th Email
						th User Role
						th Actions
					each user in users
						tr
							td #{user.name}
							td #{user.email}
							td #{user.user_role}
							td
								a(href=`/admin/users/edit/${user._id}`).edit
								span(data-userid=`${user._id}`).delete
				div !{paginationLinks}
			.mini-side
				a(href="/admin/users/add").add Add User

	script(src="http://code.jquery.com/jquery-latest.js")
	script(src="/static/js/helpers/accordian.js")
	script(src="/static/js/helpers/message.js")
	script(src="/static/js/helpers/popup.js")
	script(src="/static/js/admin/admin.js")
	script(src="/static/js/admin/users.js")