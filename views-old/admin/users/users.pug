extends ../layout

block content
	
	header
		nav
			ul.list.nav
				li
					a(href="/logout") Logout

	section#user-page
		include ../partials/side

		.main
			h1 Users
			ul.bread-crumb
				li
					span Users
			.floatLeft
				table
					tr
						th Name
						th User Role
						th Actions
					each user in users
						tr
							td #{user.name}
							td #{user.user_role}
							td
								a(href=`/admin/users/edit/${user._id}`).edit
								span(data-userid=`${user._id}`).delete
				div !{paginationLinks}
			.mini-side
				a(href="/admin/users/add").add Add User

	script(src="http://code.jquery.com/jquery-latest.js")
	script(src="/static/js/helpers/accordian.js")
	script(src="/static/js/helpers/message.js")
	script(src="/static/js/helpers/popup.js")
	script(src="/static/js/admin/admin.js")
	script(src="/static/js/admin/users.js")